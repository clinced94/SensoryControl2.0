<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/whiterBackground"
    android:orientation="vertical">
    <!-- tools:context="com.fyp.david.selfregulation.HomeActivity" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/sign_out"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/btn_sign_out"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_button_border_settings"
        android:layout_gravity="bottom"
        android:weightSum="5"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:id="@+id/toolbarcontainer"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent">

            <ImageButton
                android:id="@+id/homeButton"
                android:text="Home"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:srcCompat="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/statsButton"
                android:text="Stats"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                app:srcCompat="@drawable/ic_stats"
                android:contentDescription="statistics" />

            <ImageButton
                android:id="@+id/recordButton"
                android:text="Record"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                app:srcCompat="@drawable/ic_record"
                android:contentDescription="record" />

            <ImageButton
                android:id="@+id/activityButton"
                android:text="Activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                style="@style/Widget.AppCompat.Button"
                app:srcCompat="@drawable/ic_activities"
                android:contentDescription="activities" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:text="Settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toolbar_button_border_settings"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                style="@style/Widget.AppCompat.Button"
                app:srcCompat="@drawable/ic_settings"
                android:contentDescription="settings" />


        </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>
</LinearLayout>